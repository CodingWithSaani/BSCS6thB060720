<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInPage">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/userEmailET"
        android:hint="@string/enter_the_email_here"
        android:maxLength="20"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:nextFocusDown="@id/userPasswordET"
        />

    <EditText
        android:layout_below="@id/userEmailET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/userPasswordET"
        android:hint="@string/enter_the_password_here"
        android:maxLength="20"
        android:maxLines="1"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/userPasswordET"
        android:id="@+id/signInUserBtn"
        android:layout_centerInParent="true"
        android:text="@string/sign_in"/>

    <ProgressBar
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:id="@+id/waitProgressBar"
        android:visibility="invisible"
        />

</RelativeLayout>